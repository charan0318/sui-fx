# SUI-FX Production Environment Configuration
# Copy to .env and update with your production values

# ====================
# SERVER CONFIG
# ====================
NODE_ENV=production
PORT=3001
REQUEST_TIMEOUT=30000
CORS_ORIGINS=*

# ====================
# DATABASE CONFIG
# ====================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/suifaucet
DATABASE_SSL=false

# ====================
# REDIS CONFIG
# ====================
# Redis connection string for caching and rate limiting
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=suifx:
REDIS_TTL=3600

# ====================
# SUI BLOCKCHAIN CONFIG
# ====================
SUI_NETWORK=testnet
SUI_RPC_URL=https://fullnode.testnet.sui.io/
# IMPORTANT: Replace with your actual testnet private key
SUI_PRIVATE_KEY=your_actual_sui_private_key_here
SUI_DEFAULT_AMOUNT=1000000
SUI_MAX_AMOUNT=5000000000
SUI_MIN_WALLET_BALANCE=10000000000

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_PER_WALLET=1
RATE_LIMIT_MAX_PER_IP=50
RATE_LIMIT_ENABLED=true

# ====================
# AUTHENTICATION & SECURITY
# ====================
# IMPORTANT: Change these for production
API_KEY=suifx-prod-api-key-2025-secure-change-me
ADMIN_API_KEY=suifx-admin-api-key-2025-secure-change-me
JWT_SECRET=suifx-jwt-secret-2025-production-change-me
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-admin-password-change-me

# ====================
# LOGGING & MONITORING
# ====================
LOG_LEVEL=info
LOG_FORMAT=json
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# ====================
# FEATURES
# ====================
ENABLE_SWAGGER=true
ENABLE_CORS=true
