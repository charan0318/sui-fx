# 
# Advanced Sui Faucet DApp - Development Environment
# Copy this file to .env and configure your development values

# =================
# 🚀 CORE FAUCET CONFIGURATION  
# =================
NODE_ENV=development
FAUCET_NAME=sui-faucet-dev
SERVICE_PORT=3001
SERVICE_HOST=localhost

# =================
# ⛓️ SUI BLOCKCHAIN SETTINGS
# =================
SUI_NETWORK=testnet
SUI_RPC_URL=https://fullnode.testnet.sui.io/
SUI_FAUCET_PRIVATE_KEY=your_development_signer_key_here
SUI_DEFAULT_AMOUNT=1000000
SUI_MAX_AMOUNT=1000000000
SUI_MIN_WALLET_BALANCE=10000000000

# =================
# 💾 DATABASE CONFIGURATION
# =================
DATABASE_URL=postgresql://suifaucet:dev_password@localhost:5432/suifaucet_dev
DATABASE_SSL=false

# =================
# 🔴 REDIS CONFIGURATION
# =================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PREFIX=sui-faucet:
REDIS_TTL=3600

# =================
# 🔐 AUTHENTICATION
# =================
API_KEY=sui_faucet_dev_key_2025
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# =================
# ⚡ RATE LIMITING
# =================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL_WINDOW=3600000
RATE_LIMIT_GLOBAL_MAX=1000
RATE_LIMIT_PER_WALLET_MAX=1
RATE_LIMIT_PER_IP_MAX=50
RATE_LIMIT_SKIP_SUCCESS=false
RATE_LIMIT_SKIP_FAILED=true

# =================
# CORS CONFIGURATION
# =================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =================
# LOGGING
# =================
LOG_LEVEL=info
LOG_FORMAT=json
# LOG_FILE=logs/app.log

# =================
# DISCORD BOT (Optional)
# =================
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here
FAUCET_API_URL=http://localhost:3001/api/v1
FAUCET_API_KEY=suisuisui
LOG_CHANNEL_ID=your_log_channel_id_here

# =================
# DEVELOPMENT/DEBUG
# =================
REQUEST_TIMEOUT=30000
